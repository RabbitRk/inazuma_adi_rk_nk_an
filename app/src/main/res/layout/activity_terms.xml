<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/TitleWindow"
        android:textSize="24sp"
        android:typeface="serif"
        android:textStyle="bold" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TitleWindow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Subtitle"
                android:typeface="serif"

                android:textSize="16sp"
                android:letterSpacing="0.15"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/MessageWindow"
                android:lineSpacingExtra="10dp"
                android:typeface="serif"

                android:letterSpacing="0.25"

                android:textSize="14sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Subtitle1"
                android:typeface="serif"
                android:letterSpacing="0.15"

                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/MessageWindow1"
                android:lineSpacingExtra="10dp"
                android:typeface="serif"
                android:letterSpacing="0.25"

                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Subtitle2"
                android:typeface="serif"
                android:letterSpacing="0.15"

                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/MessageWindow2"
                android:typeface="serif"
                android:letterSpacing="0.25"

                android:lineSpacingExtra="10dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Subtitle3"
                android:typeface="serif"
                android:letterSpacing="0.15"

                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/MessageWindow3"
                android:typeface="serif"
                android:letterSpacing="0.25"


                android:lineSpacingExtra="10dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Subtitle4"
                android:typeface="serif"
                android:textSize="16sp"
                android:letterSpacing="0.15"

                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/MessageWindow4"
                android:typeface="serif"
                android:letterSpacing="0.25"

                android:lineSpacingExtra="10dp"
                android:textSize="14sp"/>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>
